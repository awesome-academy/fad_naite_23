<% provide :title, t(".title") %>
<% provide :button_text, t(".button_text") %>
<div class="container">
  <div class="row">
    <%= render "shared/nav_bar" %>
    <div class="col-md-9 well">
      <h2><%= t ".title" %></h2>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <%= render "form" %>
          <div class="gravatar_edit">
            <%= gravatar_for @user %>
            <%= link_to t("change"), "http://gravatar.com/emails", target: "_blank" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
