<% provide :title, t(".title") %>
<div class="container">
  <div class="row">
    <%= render "shared/nav_bar" %>
    <div class="col-md-9 well">
      <div class="row">
        <%= form_tag admin_orders_path, method: "get", remote: true do %>
          <%= button_tag(type: "submit", name: "search", value: "pending",
            class: "btn btn-lg btn-warning") do %>
             <%= t "status.pending" %><i class="glyphicon glyphicon-refresh"></i>
          <% end %>
          <%= button_tag(type: "submit", name: "search", value: "accepted",
            class: "btn btn-lg btn-info") do %>
            <%= t "status.accepted" %><i class="glyphicon glyphicon-ok"></i>
          <% end %>
          <%= button_tag(type: "submit", name: "search", value: "cancelled",
            class: "btn btn-lg btn-danger") do %>
            <%= t "status.cancelled" %><i class="glyphicon glyphicon-remove"></i>
          <% end %>
        <% end %>
      <div>
      <div class="row">
        <div class="col-sm-12 col-md-10 col-md-offset-1">
          <table class="table table-hover">
            <thead>
              <tr>
                <th><%= t "orders.show.title" %></th>
                <th class="text-center"><%= t "orders.index.status" %></th>
                <th class="text-center"><%= t "name" %></th>
                <th class="text-center"><%= t "address" %></th>
                <th class="text-center"><%= t "phone_number" %></th>
              </tr>
            </thead>
            <tbody id="orders">
              <%= render @orders %>
            </tbody>
            <%= will_paginate %>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
